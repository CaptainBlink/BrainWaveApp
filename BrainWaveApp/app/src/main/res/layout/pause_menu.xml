<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.groupx.brainwaveapp.pause_menu"
    android:id="@+id/Rel">

    <RelativeLayout
        android:layout_width="450px"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_cont"
            android:src="@mipmap/button1"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/menu_continue"
            android:id="@+id/continue_g"
            android:gravity="center"
            android:textColor="#ff4aff0f" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="450px"
        android:layout_height="150px"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/toMain"
            android:scaleType="centerCrop"
            android:src="@mipmap/button1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/main_menu"
            android:id="@+id/go_mainmenu"
            android:gravity="center"
            android:textColor="#ff4aff0f" />
    </RelativeLayout>
</RelativeLayout>
