<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <!--<Button android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>-->
    <!--<Button android:layout_width="fill_parent" android:layout_height="wrap_content" ></Button>-->
    <!--<Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/buttonStop" ></Button>-->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <Button
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:id="@+id/button1" android:text="Connect" android:onClick="doStuff"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:id="@+id/buttonStart" android:text="Start saving data"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:id="@+id/buttonStop" android:text="Stop saving data" android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <Button
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:id="@+id/buttonStartGraph"
            android:text="Show graph" android:onClick="onGraphClick"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:textSize="12sp"
            android:id="@+id/buttonStartLog"
            android:text="Show data" android:onClick="onLogClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="323dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-5dp"
        android:id="@+id/graph">
    </LinearLayout>

    <ScrollView android:layout_width="fill_parent" android:id="@+id/scrollView1" android:fadeScrollbars="true" android:scrollbars="vertical" android:layout_height="wrap_content" android:layout_weight="1.00">
        <TextView android:id="@+id/textView1" android:layout_width="fill_parent" android:text="TextView" android:layout_height="fill_parent"></TextView>
    </ScrollView>
</LinearLayout>